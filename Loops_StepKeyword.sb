'Step counts up or down depeiding on the sign.
For B = 2 To 30 Step 2
  TextWindow.WriteLine(B)
EndFor

For B = 29 To 1 Step -2
  TextWindow.WriteLine(B)
EndFor

'Small basic does this behind the scenes whenever you make a loop
A = 29
Start:
TextWindow.WriteLine(A)
A = A - 2
If (0 < A) Then
  Goto Start
EndIf
  